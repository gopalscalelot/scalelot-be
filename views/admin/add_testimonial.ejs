<section>
  <div class="max-w-screen-2xl mx-auto items-center px-5 lg:px-9 py-12 lg:py-16 xl:py-24 2xl:py-28">
    <form action="#">
      <div class="pr-0 px-0 mx-auto">
        <div class="flex flex-wrap">
          <div class="w-full px-3.5 mb-5 flex flex-wrap">
            <div class="mr-5">
              <label class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Clint Photos</label>
              <label class="cursor-pointer text-xs text-center group relative inline-block">
                <input type="file" name="profile_pic" class="hidden" onchange="readURL(this);">
                <img id="EmployeeProfile" src="/assets/images/unnon.jpg" class="w-28 h-28 object-cover object-top shadow hover:shadow-md rounded-lg overflow-hidden border border-current group-hover:opacity-75">
                <span class="absolute inset-0 bg-gray-700 bg-opacity-75 flex items-center justify-center text-white rounded-lg text-sm opacity-0 group-hover:opacity-100">Change <br> Profile</span>
              </label>
            </div>
            <div class="">
              <label class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Project Rating<span class="text-scalelot-secondary">*</span></label>
              <div class="flex items-center"><input type="range" value="1.0" step="0.1" min="1.0" max="5.0" /><span class="flex items-center"><output class="ml-3 mr-2 w-5 text-right">0.0</output><span class="text-2xl leading-3 text-yellow-400">&#9733;</span></span></div>
            </div>
          </div>
          <div class="w-full lg:w-1/2 px-3.5 mb-5">
            <label class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Clint Name<span class="text-scalelot-secondary">*</span></label>
            <input type="text" class="dInput small rounded-lg" placeholder="Clint Name" />
          </div>
          <div class="w-full lg:w-1/2 px-3.5 mb-5">
            <label class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Clint Designation<span class="text-scalelot-secondary">*</span></label>
            <input type="text" class="dInput small rounded-lg" placeholder="Clint Designation" />
          </div>
          <div class="w-full px-3.5 mb-5">                   
            <label for="message" class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Add Review<span class="text-scalelot-secondary">*</span></label>
            <textarea id="message" name="message" placeholder="Clint Review" rows="10" class="dInput small rounded-lg"></textarea>
          </div>
          <div class="w-full px-3.5 mb-5 text-right flex items-center justify-end">
            <div class="pl-5">
              <button type="submit" class="btn-border bg-scalelot-primary text-white border-white group anim rounded-xl border ml-auto">
              <span class="bleft anim group-hover:left-0"></span>
              Save
              <span class="bright anim group-hover:-right-full"></span>
              </button>
            </div>
            <div class="pl-5">
              <button type="submit" class="btn-border bg-scalelot-primary text-white border-white group anim rounded-xl border ml-auto">
              <span class="bleft anim group-hover:left-0"></span>
              Update
              <span class="bright anim group-hover:-right-full"></span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

<script>
// 
function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    reader.onload = function (e) {
      $('#EmployeeProfile').attr('src', e.target.result);
    };
    reader.readAsDataURL(input.files[0]);
  }
};
</script>