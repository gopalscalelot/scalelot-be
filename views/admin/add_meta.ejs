<section>
  <div class="max-w-screen-2xl mx-auto items-center px-5 lg:px-9 py-12 lg:py-16 xl:py-24 2xl:py-28">
    <form action="/api/v1/meta-keywords" method="POST">
      <div class="pr-0 px-0 mx-auto">
        <div class="flex flex-wrap">
          <div class="w-full px-3.5 mb-5">
            <label class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Select Country<span class="text-scalelot-secondary">*</span></label>
            <div class="relative">
              <select class="appearance-none dInput small rounded-lg text-gray-700" name="country">
                <option>INDIA</option>
                <option>CANADA</option>
                <option>UNITED STATES</option>
                <option>FRANCE</option>
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="stroke-white h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                  <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
                </svg>
              </div>
            </div>
          </div>
          <div class="w-full px-3.5 mb-5">
            <label class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Select Page<span class="text-scalelot-secondary">*</span></label>
            <div class="relative">
              <select class="appearance-none dInput small rounded-lg text-gray-700" name="page">
                <option>index html</option>
                <option>About html</option>
                <option>Services html</option>
                <option>Work html</option>
                <option>blog html</option>
                <option>contact html</option>
                <option>portfolio html</option>
                <option>saclelot Academy html</option>
                <option>hire html</option>
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="stroke-white h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                  <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
                </svg>
              </div>
            </div>
          </div>
          <div class="w-full px-3.5 mb-5">                   
            <label for="message" class="text-sm lg:text-base text-scalelot-primary dark:text-white font-medium mb-2 block">Add Keywords<span class="text-scalelot-secondary">*</span></label>
            <textarea id="message" name="keywords" placeholder="Add your Keywords" rows="10" class="dInput small rounded-lg"></textarea>
          </div>
          <div class="w-full px-3.5 mb-5 text-right flex items-center justify-end">
            <div class="pl-5">
              <button type="submit" class="btn-border bg-scalelot-primary text-white border-white group anim rounded-xl border ml-auto">
              <span class="bleft anim group-hover:left-0"></span>
              Save
              <span class="bright anim group-hover:-right-full"></span>
              </button>
            </div>
<!--            <div class="pl-5">-->
<!--              <button type="submit" class="btn-border bg-scalelot-primary text-white border-white group anim rounded-xl border ml-auto">-->
<!--              <span class="bleft anim group-hover:left-0"></span>-->
<!--              Update-->
<!--              <span class="bright anim group-hover:-right-full"></span>-->
<!--              </button>-->
<!--            </div>-->
          </div>
        </div>
      </div>
    </form>
  </div>
</section>